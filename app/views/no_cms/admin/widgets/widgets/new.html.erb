<% content_for :second_menu do %>
  <ul>
    <%= render partial: 'widget_listing_item', collection: @widgets, as: 'widget' unless @widgets.blank? %>
  </ul>
<% end %>

<%= no_cms_admin_form_for @widget, url: widgets_path do |f| %>
  <%= render partial: 'no_cms/admin/shared/toolbar', locals: { f: f } %>
  <div class="content">
    <%= render 'no_cms/admin/shared/log_messages' %>
    <%= render 'content_fields', f: f %>
  </div>
<% end %>
